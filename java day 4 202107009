//PRIME NUMBERS
public class Main{
    public static void main(String[] args){
        int n=7;
        boolean prime=true;
        
        for(int i=2;i<n;i++){
            if(n%i==0){
                prime=false;
                
                break;
            }
        }System.out.println(prime);
        
    }
}
//PALINDROME PROGRAM BY USER INPUTS
import java.util.Scanner;
public class pallindrome{
    public static void main(String[] args){
        Scanner input=new Scanner(System.in);
        System.out.println("enter a number:");
        int num=input.nextInt();
        int temp=num;
        int rev=0;
        while(num!=0){
            int r=num%10;
            rev=rev*10+r;
            num=num/10;
            
        }
        if (temp==rev){
        System.out.println("it is a pallindrome" +temp);
    }else{
        System.out.println("it is not a palindrome");
         }input.close();
    }
}
//FACTORIAL PROGRAM
import java.util.Scanner;
public class Main{
    public static void main(String[] args){
        Scanner input=new Scanner(System.in);
        System.out.println("enter the limit:");
        int limit=input.nextInt();
        int fact=1;
        
        for(int i=1;i<=limit;i++){
            fact=fact*i;
        }    
            System.out.println(fact);
    }   
}
// BASIC ARRAY PROGRAM USING LOOPS
public class Arrays{
    public static void main(String[] args){
        String[] flowers={"rose","lily","jasmine","sunflower"};
        for(int i=0;i<=flowers.length;i++){
            System.out.println(flowers[i]);
        }
        
    }
}
// ARRAY PROGRAM USING FOR LOOP
public class Array{
    public static void main(String[] args){
        String[] cars={"volvo","suzuki","BMW","maruti"};
        for (String i : cars){
            System.out.println(i);
        }
    }
}
//ARRAY PROGRAM USING WHILE LOOP
public class Array{
    public static void main(String[] args){
        String[] cars={"volvo","suzuki","BMW","maruti"};
        int i=0;
        while(i<cars.length){
            System.out.println(cars[i]);
            i=i+1;
        }
    }
}
//MULTI DIMENSIONAL ARRAY
public class Multidimensionalarray{
    public static void main(String[] args){
        int[][] num={{1,2,3,4},{5,6,7,8}};
        System.out.println(num[0][3]);

    }
}
// MULTI DIMENSIONAL ARRAY TRAVERSING USING FOR LOOP
public class Loop{
    public static void main(String[] args){
        int[][] num={{1,2,3,4},{5,6,7,8}};
        for(int i=0;i<num.length;i++){
            for(int j=0;j<num[i].length;j++){
                System.out.println(num[i][j]);
            
            }
        }
    }
}
//FUNCTIONS
public class Main{
    static void method(){
        System.out.println("hello world!");
    }
    public static void main(String[] args){
        method();
    }
}
