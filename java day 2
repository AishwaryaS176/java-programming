//type casting program in java
public class typecasting{
    public static void main(String[] args){
        double mydouble=7.98;
        int myint=(int) mydouble;
        System.out.println(myint);
        System.out.println(mydouble);
    }
}
//even or odd number user input
import java.util.Scanner;

class Input {
    public static void main(String[] args) {
    	
        Scanner input = new Scanner(System.in);
    	
        System.out.print("Enter an integer: ");
        int number = input.nextInt();
        if (number%2==0){
            System.out.println("even number");
        }else{
            System.out.println("odd number");
             }
        input.close();
    }
}
// sum of numbers even or not
import java.util.Scanner;
public class input{
    public static void main(String[] args){
    Scanner input=new Scanner(System.in);
   // System.out.println("enter a integer");
    //int number=input.nextInt();
    System.out.println("enter number_1");
    int number_1=input.nextInt();
    System.out.println("enter number_2");
    int number_2=input.nextInt();
    int sum=number_1+number_2;
    if (sum%2==0){
        System.out.println("even number");
    }else{
        System.out.println("odd number");
    }
    input.close();
    }
}
//positive or negative number
import java.util.Scanner;
public class test{
    public static void main(String[] args){
        Scanner input=new Scanner(System.in);
        System.out.println("enter the number:");
        int number=input.nextInt();
        if (number>0){
            System.out.println("positive");
        }else{
            System.out.println("negative");
             }
        input.close();
        }
}
// pass or fail according to marks
import java.util.Scanner;
public class test{
    public static void main(String[] args){
        Scanner input= new Scanner(System.in);
        System.out.println("enter the marks:");
        float marks=input.nextFloat();
        if (marks>=50){
            System.out.println("pass");
        }else{
            System.out.println("fail");
        }
        input.close();
    }
}
// days in words using switch case
public class Main {
  public static void main(String[] args) {
    int day = 4;
    switch (day) {
      case 1:
        System.out.println("Monday");
        break;
      case 2:
        System.out.println("Tuesday");
        break;
      case 3:
        System.out.println("Wednesday");
        break;
      case 4:
        System.out.println("Thursday");
        break;
      case 5:
        System.out.println("Friday");
        break;
      case 6:
        System.out.println("Saturday");
        break;
      case 7:
        System.out.println("Sunday");
        break;
    }
  }
}
//program to print alternative numbers upto 100
public class numbers{
    public static void main(String[] args){
        for(int i=0;i<=100;i++){
            if(i%2!=0){
                System.out.println(i);
            }
        }
    }
}
//program to print natural numbers from 1 to 100
